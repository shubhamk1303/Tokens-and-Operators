#include <iostream>
using namespace std;

int main() 
{
    int x;
    char y;
    float z;
    double a;

    cout<<"Size of int is:"<<sizeof(x)<<endl;
    cout<<"Size of char is:"<<sizeof(y)<<endl;
    cout<<"Size of float is:"<<sizeof(z)<<endl;
    cout<<"Size of double is:"<<sizeof(a)<<endl;


    return 0;
}
